                    <div class="labe">
                        <label for="nameU">Nombre usuario:</label><br>
                        <input type="text" id ="nameU" name="nameU" class="field "value="<%= (typeof old != 'undefined' && old.nameU)?old.nameU:'' %>" placeholder="ingrese su usuario" >
                    </div>
