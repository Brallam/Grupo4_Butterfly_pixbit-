<%-include("./partials/head.ejs")%>

<body>
    <%-include("./partials/header.ejs")%>


    <div class="container">
        <div class="row"> <video autoplay loop width="100%" src="/media/video.mp4" alt=""></video>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 cajaPrincipal">

                <div class="col-12 col-md-6 img1">
                    <img class="imgPrincipal "src="/images/products/<%= producto.image %>  " alt="">
                </div>    

                <div class="col-12 col-md-6 cajaDescripcion">
                    <h4 class="col-12"><%= producto.name %> </h4>
                    <h5><%=producto.description%> <h5>
                </div>
                <div class="col-12 col-md-6 ">
                    <div class="img2">
                    <img class="imgPrincipal "src="/images/products/<%= producto.image %>  " alt="">
                    </div>
                    <div class=" col-12 cajaImagenes">

                        <div class="col-6 col-md-3 ">
                            <img class="zoom img-fluid" src="/images/products/default-image.png" alt="">
                        </div>
                        <div class="col-6 col-md-3">
                            <img class="zoom img-fluid" src="/images/products/default-image.png" alt="">
                        </div>
                        <div class="col-6 col-md-3">
                            <img class="zoom img-fluid" src="/images/products/default-image.png" alt="">
                        </div>
                        <div class="col-6 col-md-3">
                            <img class="zoom img-fluid" src="/images/products/default-image.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="row">
            <div class="col-12  cajaSecundaria">
                <div class="col-12 col-md-6 caja3">
                    <div class="requisitos">
                        <h4>Requisitos del sistema</h4>
                        <div>
                            <p><%= producto.requirements %> </p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 detalles3">
                    <div class="col-4 col-md-4">
                        <h3>$<%= producto.price %> </h3>
                    </div>
                    <div class="col-4 col-md-4 ">
                        <span >20 % OFF</span>

                        <i class="fas fa-truck"></i>
                       
                    </div>
                    <div class="col-4 col-md-4 ">
                        <button class="botonAñadir" type="button">Añadir <i class="fa fa-shopping-cart"
                                aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%-include("./partials/footer.ejs")%>
</body>

</html>